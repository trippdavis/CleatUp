<div class ="form-alert alert alert-danger" style="display: none">
  <ul class="errors"></ul>
</div>

<form class=" group-form">
  <div class="form-group">
    <input
      type="text"
      class="form-control form-group-title"
      name="group[title]"
      placeholder="Title">
  </div>

  <div class="form-group">
    <textarea name="group[description]"
      class="form-control form-group-description"
      rows="8"
      placeholder="Description"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Submit!</button>
  <button class="btn btn-danger back">Cancel</button>
</form>
